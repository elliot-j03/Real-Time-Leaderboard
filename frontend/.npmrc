# Donâ€™t run lifecycle scripts automatically (protects against supply-chain malware)
ignore-scripts=true

# Only allow installs from the official npm registry
registry=https://registry.npmjs.org/

# Fail fast if a package is missing integrity metadata (prevents tampering)
strict-ssl=true

# Enforce exact package-lock.json (no surprise upgrades)
package-lock=true

# Prefer offline cache when possible (avoids unexpected registry lookups)
prefer-offline=true

# Always run audit after install
audit=true

## Command to check  for scripts
# grep -R '"preinstall"\|"install"\|"postinstall"' node_modules/<package>/package.json
# node -e "const fs=require('fs'),path=require('path');const walk=dir=>fs.readdirSync(dir).forEach(f=>{const p=path.join(dir,f);if(fs.statSync(p).isDirectory())walk(p);else if(f==='package.json'){const pkg=JSON.parse(fs.readFileSync(p));if(pkg.scripts&&(pkg.scripts.preinstall||pkg.scripts.install||pkg.scripts.postinstall))console.log(p,pkg.scripts);}});walk('node_modules');"

## Commands to run scripts
# npm run postinstall --workspace=<package-name>
# OR
# node node_modules/<package>/scripts/postinstall.js
